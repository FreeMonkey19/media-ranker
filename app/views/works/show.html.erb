
   <section>
      <h2><%= @work.title %></h2>
      <p>Created by:<%= @work.creator %></p>
      <p>Published:<%= @work.publication_year %></p>
      <p><%= @work.description %></p>
      </section>
      <section>
            <a><%= link_to("Back to media ranks", root_path, alt: "link to media ranker main page", class: "btn btn-primary") %></a>

      <a><%= link_to("Edit", edit_work_path(@work.id), alt: "link to edit work", class: "btn btn-primary") %></a>
      <a><%= link_to("Upvote", work_votes_path(@work.id), method: :post, alt: "link to upvote this work", class: "btn btn-primary") %></a>
      <a><%= link_to("Delete", work_path(@work.id), method: :delete, alt: "link to delete this work", class: "btn btn-danger", data: {confirm: "Are you sure you want to delete this work?"}) %></a>
   </section>
   <section class="works-votes__container">
      <h3 class="works-votes__header"><%= "#{@work.votes.length} Votes for this #{@work.category.capitalize}"%></h3>
      <table class="table">
         <thead>
            <tr>
               <th>User</th>
               <th>Date</th>
            </tr>
         </thead>
         <tbody>
            <% @work.votes.each do |vote| %>
            <tr>
               <td><%= vote.user.name %></td>
               <td><%= (vote.created_at).strftime('%m-%d-%Y') %></td>
               <% end %>
            </tr>
         </tbody>
      </table>
   </article>
