<%= form_with model: @work, class: 'create_work' do |f| %>
<p>Please provide the appropriate information:<p>

  <% if @work.errors.any? %>
    <ul>
      <% @work.errors.each do |column, message| %>
        <li>
          <%= column %> <%=message %>
        </li>
      <% end %>
    </ul>
  <% end %>

   <%= f.label :category %>
  <%= f.select(:category, [ " ", "movie", "book", "album"]) %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator %>
  <%= f.text_field :creator %>

  <%= f.label :publication_year %>
  <%= f.text_field :publication_year %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit "#{action_name} Work", class "work_button" %>
<% end %>
