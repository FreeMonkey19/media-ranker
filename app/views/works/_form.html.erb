<%= form_with model: @work, class: 'create_work' do |f| %>
<p>Please provide the appropriate information:<p>



  <%= f.label :category %>
  <%= f.select(:category, ["movie", "album", "book"]) %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator %>
  <%= f.text_field :creator %>

  <%= f.label :publication_year %>
  <%= f.text_field :publication_year %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.submit action_name %>
<% end %>
