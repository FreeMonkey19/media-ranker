<section class="spotlight">
   <h2 class="spotlight__header">
      <span class="spotlight__header--prefix ::after">Media Spotlight</span>
      <%= link_to @winner.title, work_path(@winner.id), alt: "link to see details of work with most votes", class: "spotlight__link-to" %> by
      <%= @winner.creator %>
   </h2>
   <p class="spotlight__description">
      <%= @winner.votes.length%> votes - <%= @winner.description %>
   </p>
</section>
<hr class="root-hr"/>
<section class="top-ten__container">
   <section class="top-ten__list-container">
      <h2 class="top-ten__header">Top Movies</h2>
      <ul class ="list-group top-ten__list">
         <% @works.top_ten("movie").each do |work| %>
         <li class="list-group-item">
            <h4>
               <%= link_to(work.title, work_path(work.id), alt: "link to details for a top ten movie") %> <small class="top-ten__creator">by <%= work.creator %></small>
            </h4>
            <p><%=work.votes.count %> votes</p>
         </li>
         <% end %>
      </ul>
   </section>
   <section class="top-ten__list-container">
      <h2 class="top-ten__header">Top Books</h2>
      <ul class ="list-group top-ten__list">
         <% @works.top_ten("book").each do |work| %>
         <li class="list-group-item">
            <h4>
               <%= link_to(work.title, work_path(work.id), alt: "link to details for a top ten book") %> <small class="top-ten__creator">by <%= work.creator %></small>
            </h4>
            <p><%=work.votes.count %> votes</p>
            <% end %>
         </li>
      </ul>
   </section>
   <section class="top-ten__list-container">
      <h2 class="top-ten__header">Top Albums</h2>
      <ul class ="list-group top-ten__list">
         <% @works.top_ten("album").each do |work| %>
         <li class="list-group-item">
            <h4>
               <%= link_to(work.title, work_path(work.id), alt: "link to details for a top ten album") %> <small class="top-ten__creator">by <%= work.creator %></small>
            </h4>
            <p><%=work.votes.count %> votes</p>
            <% end %>
         </li>
      </ul>
   </section>
</section>