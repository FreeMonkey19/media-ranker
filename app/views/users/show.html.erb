
<main class="row">
<h3>User Summary: <%= @user.name %></h3>
<p>Joined site <%= (@user.created_at).strftime('%b %m, %Y')%></p>
<h4>Votes</h4>

<table>
  <thead>
    <tr>
      <th>Media Title</th>
      <th>Created By</th>
      <th>Published</th>
      <th>Category</th>
      <th>Voted On</th>
    </tr>
  </thead>
  <tbody>
      <% @user.votes.each do |vote| %>
      <tr>
        <td><%= vote.work.title %></td>
        <td><%= vote.work.creator %></td>
        <td><%= vote.work.publication_year %></td>
        <td><%= vote.work.category %></td>
        <td><%= (vote.created_at).strftime('%b %m, %Y') %></td>
        <% end %>
      </tr>
  </tbody>
</table>

  <%= button_to("See all Users", users_path, method: :get, alt: "link to user index page", class: "button") %>

  <%= button_to("Back to Media List", root_path, method: :get, alt: "link to home page", class: "button") %>
</main>