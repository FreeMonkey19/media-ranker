
<main class="row">
<h3 class="user">User Summary: <%= @user.name %></h3>
<%# %b is the abbreviated month name ie:Jan %>
<p>Joined site <%= (@user.created_at).strftime('%b %m, %Y')%></p>
<h4>Votes</h4>

<table class="table">
  <thead>
    <tr>
      <th>Media Title</th>
      <th>Created By</th>
      <th>Published</th>
      <th>Category</th>
      <th>Voted On</th>
    </tr>
  </thead>
  <tbody>
      <% @user.votes.each do |vote| %>
      <tr>
        <td><%= link_to(vote.work.title, work_path(vote.work.id), alt: "link to work show page") %></td>
        <td><%= vote.work.creator %></td>
        <td><%= vote.work.publication_year %></td>
        <td><%= vote.work.category %></td>
        <td><%= (vote.created_at).strftime('%b %m, %Y') %></td>
        <% end %>
      </tr>
  </tbody>
</table>

  <%= button_to("See all Users", users_path, method: :get, alt: "link to all users", class: "btn btn-secondary") %>

  <%= button_to("Back to Media List", root_path, method: :get, alt: "link to main page", class: "btn btn-primary") %>
</main>