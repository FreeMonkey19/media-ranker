<main>
   <section class="table">
      <h2>List of Users</h2>
      <% if @users.length > 0 %>
      <table class="table">
         <thead>
            <tr>
               <th>Username</th>
               <th>Votes</th>
               <th>Joined</th>
            </tr>
         </thead>
         <tbody>
            <% @users.each do |user|%>
            <tr>
               <td><%= link_to user.name, user_path(user.id) %></td>
               <td><%= user.votes.length %></td>
               <td><%= user.created_at.strftime("%b %d, %Y") %></td>
            </tr>
            <% end %>
         </tbody>
      </table>
      <% else %>
      <p>No users in the system!</p>
      <% end %>
   </section>
   <%= link_to "Back to Media List", works_path, class: "btn btn-secondary" %>
</main>